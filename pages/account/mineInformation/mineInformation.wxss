.mineInformation{
  height: 100%;
  width: 100%;
  background-color: #efefef;
}
page{
    height: 100%;
    width: 100%;
    background-color: #efefef;
}

.titleInfor{
  height: 200px;
  width: 100%;
  background-color: #fff;
  display: grid;
  justify-content: center;
  align-items: center;
}
.accountPicture{
  width: 100%;
  height: 150rpx;
  display: grid;
  place-items: center; /* 同时水平和垂直居中 */
}
.Protrait{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.inputUserName{
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  place-items: center; /* 同时水平和垂直居中 */
}
.input-container {
  display: flex;
  align-items: center;
  border: 1px solid #ccc;
  padding: 10px;
  border-radius: 5px;
}
.input {
  flex: 1;
  outline: none;
  border: none;
  background: none;
  width: 50rpx;
}
.writeImg{
  width: 20rpx;
  height: 20rpx;
}

.basicInfor{
  margin-top: 20rpx;
  height: 200rpx;
  background-color: #fff;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.basicInforLabel{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.labelTile{
 width: 30%;
 height: 100%;
 display: flex;
 justify-content: center; /* 水平居中 */
 align-items: center; /* 垂直居中 */
 text-align: center;
}
.labelValue{
  width: 70%;
  height: 100%;
  color: grey;
  display: flex;
  justify-content: center;
  align-items: center; 
  text-align: right;
}
.inputValue
{
  width: 70%;
  height: 100%;
  color: black;
  display: flex;
  text-align: center;
}
.line{
  width: 100%; /* 设置线的宽度 */
  height: 2px; /* 设置线的高度 */
  background-color: #efefef; /* 设置线的颜色 */
}
.replaceInfor{
  margin-top: 20rpx;
  height: 300rpx;
  background-color: #fff;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.confirmBtn{
  width: 80%;
  border-radius: 50rpx;
  margin-top: 5%;
}