/* pages/account/account.wxss */
page{
  background-color: #efefef;
}
.account{
  display: flex;
  flex-direction: column;
  
}
.accountPanel{
  border: 4rpx;
  box-shadow: 1rpx 1rpx 10rpx 4rpx #efefef;
  border-radius: 10rpx;
  width: 95%;
  margin-left: 2.5%;
  margin-top: 2.5%;
  background-color: #fff;
}
.accountTitle{
  padding: 20rpx 0rpx 20rpx 40rpx;
  margin-bottom: 2rpx;
  font-size: 36rpx;
  font-weight: 800;
  color: rgb(66, 63, 63);

}
.accountInforTitle{
  margin-left: 10%;
  margin-top: 15rpx;
}
.titleInfor{
  font-weight: 600;
  margin-top: 10rpx;
  color: #696969;
  
}
.titleContent{
  font-size: 28rpx;
  color: silver;
  margin-top: 5rpx;
}
.accountInfor{
  display: flex;
  flex-direction: row;
}
.accountInforTitle{
  width: 30%;
}
.accountPicture{
  width: 300rpx;
  height: 300rpx;
  margin: 10rpx 0rpx 20rpx 10%;
}
.Protrait{
  width: 100%;
  height: 100%;
  box-shadow: 2rpx 2rpx 20rpx 2rpx silver;
  border-radius: 30rpx;
}
.UserControl{
  border: 4rpx;
  box-shadow: 1rpx 1rpx 10rpx 4rpx #efefef;
  border-radius: 10rpx;
  width: 95%;
  margin-left: 2.5%;
  margin-top: 2.5%;
  background-color: #fff;
}
.icon{
  height: 30rpx;
  width: 30rpx;
  margin: 25rpx 30rpx 25rpx 30rpx;
  opacity: 0.6;
}